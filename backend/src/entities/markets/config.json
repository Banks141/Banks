{
  "entityName": "markets",
  "collectionName": "markets",
  "apiKey": "slug",
  "permissions": {
    "get": "anyone",
    "create": "admin",
    "update": "admin",
    "delete": "admin"
  },
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "exchange": {
      "type": "enum",
      "values": [
        "NYSE",
        "NASDAQ"
      ],
      "index": true
    },
    "price": {
      "type": "number"
    },
    "numberOfPosts": {
      "type": "number",
      "default": 0
    }
  },
  "indexes": [
    {
      "keys": {
        "slug": "text",
        "name": "text"
      }
    }
  ]
}