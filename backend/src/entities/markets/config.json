{
  "entityName": "markets",
  "collectionName": "markets",
  "apiKey": "symbol",
  "permissions": {
    "get": "anyone",
    "create": "admin",
    "update": "admin",
    "delete": "admin"
  },
  "attributes": {
    "symbol": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "exchange": {
      "type": "enum",
      "values": [
        "NYSE",
        "NASDAQ"
      ],
      "index": true
    },
    "price": {
      "type": "number"
    },
    "priceClose": {
      "type": "number"
    },
    "priceUpdatedAt": {
      "type": "date"
    },
    "numberOfPosts": {
      "type": "number",
      "default": 0
    },
    "partnerId": {
      "type": "string"
    },
    "icId": {
      "type": "string"
    },
    "numberOfFollowers": {
      "type": "number",
      "default": 0
    }
  },
  "indexes": [
    {
      "keys": {
        "symbol": "text",
        "name": "text"
      }
    }
  ],
  "joinAttributes": {
    "viewerFollow": {
      "type": "findOne",
      "entity": "marketFollows",
      "query": {
        "user": "{user.id}",
        "market": "{this.id}"
      }
    }
  }
}